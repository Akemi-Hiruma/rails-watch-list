<div class="container">

  <div class="row justify-content-center">
    <div class="col-4">

      <h3>Add movie to list <%= @list.name %></h3>

      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.input :movie_id, collection: Movie.all, include_hidden: false %>
        <%= f.input :comment %>
        <%= f.submit 'Add movie', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
